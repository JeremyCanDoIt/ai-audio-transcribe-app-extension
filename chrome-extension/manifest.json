{
  "manifest_version": 3,
  "name": "AI Audio Transcriber",
  "version": "1.0.0",
  "description": "Real-time audio transcription for browser tabs",
  
  "permissions": [
    "tabCapture",
    "activeTab",
    "scripting",
    "storage"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Audio Transcribe"
  },

  "host_permissions": [
    "<all_urls>"

  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://localhost:7001 https://localhost:5001;"
  }
}